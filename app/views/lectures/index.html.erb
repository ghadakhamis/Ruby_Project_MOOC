<div class="container">
<div class="row">
  <div class="col-md-3 col-md-offset-3"><h1 class="text-center">Lectures</h1></div>
</div>
<div class="row "> 
  <div class="col-md-9 col-md-offset-2"></div>
  <div class="col-md-2 "><%= link_to 'New Lecture', new_lecture_path, :class => "button btn btn-primary btn-xs"  %></div>  
  <div class="col-md-1 "><%= link_to 'Back',root_path, :class => "button btn btn-info btn-xs"  %></div>
</div>
</br>
<p id="notice" class="alert alert-info"><%= notice %></p>
<div class="justify-content-center">
<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Content</th>
      <th>Attachment</th>
      <th>Course</th>
      <th>Likes</th>
      <th colspan="4">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= raw lecture.content %></td>
        <td><%= link_to 'Download', lecture.attachment.url, :class => "button btn btn-outline-info btn-xs" %></td>
        <td><%= lecture.course.title %></td>
        <th><span class="likes-count"><%= lecture.get_likes.size%></span></th>
        <td><%= link_to 'Show', lecture, :class => "button btn btn-success btn-xs" %></td>
        <% if !current_user.lectures.include? lecture%>
          <td><%= link_to 'Mark Span', flag_lecture_path(lecture), :class => "button btn btn-outline-primary btn-xs" %></td>
        <% end %>
        <% if current_user.id ==lecture.course.user_id  %>
          <td><%= link_to 'Edit', edit_lecture_path(lecture), :class => "button btn btn-primary btn-xs" %></td>
          <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button btn btn-danger btn-xs" %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

