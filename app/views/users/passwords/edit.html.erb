<div class="container">
<h2 class="text-center">Change your password</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <% resource.errors.full_messages.each do |message| %>
    <li class="alert alert-danger"><%= message %></li>
  <% end %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field form-group row">
    <%= f.label :password, "New password", class: 'col-md-3 control-label' %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => 'col-md-6 form-control' %>
  </div>

  <div class="field form-group row">
    <%= f.label :password_confirmation, "Confirm new password", class: 'col-md-3 control-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'col-md-6 form-control' %>
  </div>

  <div class="field form-group row">
    <div class="col-md-4"></div>
    <%= submit_tag 'Change my password', class: "btn  btn-primary btn-xs center" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
