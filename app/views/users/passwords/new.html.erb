<div class="container">
<h2 class="text-center">Forgot your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>


  <div class="field form-group row">
    <%= f.label :email, class: 'col-md-2 control-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'col-md-6 form-control' %>
  </div>
  <% resource.errors.full_messages.each do |message| %>
    <li class="alert alert-danger"><%= message %></li>
  <% end %>

  <div class="field form-group row">
    <div class="col-md-4"></div>
    <%= submit_tag 'Send me reset password instructions', class: "btn  btn-primary btn-xs center" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
