<div class="container">
<h2 class="text-center">Register</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% resource.errors.full_messages.each do |message| %>
    <li class="alert alert-danger"><%= message %></li>
  <% end %>
  <div class="field form-group row">
    <%= f.label :name, class: 'col-md-3 control-label'%>
    <%= f.text_field :name, autofocus: true, :class => 'col-md-6 col-sm-8 form-control' %>
  </div> 
  <div class="field form-group row">
    <%= f.label :email, class: 'col-md-3 control-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'col-md-6 form-control' %>
  </div>
  <div class="field form-group row">
    <%= f.label :date_of_birth, class: 'col-md-3 control-label' %>
    <%= f.date_select :date_of_birth, :start_year => 1900, :class => 'col-md-6 form-control' %>
  </div>
  
  <div class="field form-group row">
    <%= f.label :gender, class: 'col-md-3 control-label' %>
    <%= f.select :gender, User.genders.keys, :class => 'col-md-6 form-control' %>
  </div>

  <div class="field form-group row">
    <%= f.label :password , class: 'col-md-3 control-label'%>
    <%= f.password_field :password, autocomplete: "off", :class => 'col-md-6 form-control' %>
    <% if @minimum_password_length %>
      <em style="color:red" class="col-md-3"> (<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field form-group row">
    <%= f.label :password_confirmation, class: 'col-md-3 control-label col-form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'col-md-6 form-control' %>
  </div>

  <div class="field form-group row">
    <%= f.label :profile_picture, class: 'col-md-3 control-label' %>
    <%= f.file_field :profile_picture %>
  </div>
  
  <div class="field form-group row">
    <div class="col-md-4"></div>
    <%= submit_tag 'Sign up', class: "btn  btn-primary btn-xs center" %>
  </div>
<% end %>
<%= render "users/shared/links"%>
</div>