<div class="container">
<h2 class="text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% resource.errors.full_messages.each do |message| %>
    <li class="alert alert-danger"><%= message %></li>
  <% end %>
  <div class="field form-group row">
    <%= f.label :email, class: 'col-md-3 control-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'col-md-6 col-sm-8 form-control' %>
  </div>

  <div class="field form-group row">
    <%= f.label :password, class: 'col-md-3 control-label' %>
    <%= f.password_field :password, autocomplete: "off", :class => 'col-md-6 col-sm-8 form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="field form-group row">
    <div class="col-md-4"></div>
    <%= submit_tag 'Log in', class: "btn  btn-primary btn-xs center" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>