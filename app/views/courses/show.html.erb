<div class="container">
<div class="row">
  <div class="col-md-3 col-md-offset-3"><h1 class="text-center">Course</h1></div>
</div>
<div class="row "> 
  <div class="col-md-10 col-md-offset-2"></div>
  <div class="col-md-1 ">
    <% if current_user == @course.user%>
      <%= link_to 'Edit', edit_course_path(@course), :class => "button btn btn-primary btn-xs" %>
    <% end %>  
  </div>  
  <div class="col-md-1 "><%= link_to 'Back', courses_path,:class => "button btn btn-info btn-xs" %></div>
</div>
<div class="card-body">
<div class="row">
  <div class="col-md-1"><strong class="text-center">Title</strong></div>
  <div class="col-md-11"><%= @course.title %></div>
</div>
<div class="row">
  <div class="col-md-1"><strong class="text-center">User</strong></div>
  <div class="col-md-11"><%= @course.user.name %></div
</div>
</div>
</br
<p id="notice" class="alert alert-info"><%= notice %></p>
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Lecture</th>
      </tr>
    </thead>
    <tbody>
    <% @course.lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.id%></td>
        <td><%=link_to "lecture", lecture_url(lecture) %></td>
      </tr>  
    <% end %>
    </tbody>
  </table>    
</div>

