<div class="container">
<div class="row">
  <div class="col-md-3 col-md-offset-3"><h1 class="text-center">Courses</h1></div>
</div>
<div class="row "> 
  <div class="col-md-9 col-md-offset-4"></div>
  <div class="col-md-2 col-md-offset-1"><%= link_to 'New Course', new_course_path, :class => "button btn btn-primary btn-xs" %></div>
  <div class="col-md-1 "><%= link_to 'Back',root_path, :class => "button btn btn-info btn-xs" %></div>
</div>
</br>
<p id="notice" class="alert alert-info"><%= notice %></p>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Title</th>
        <th>User</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.title %></td>
          <td><%= course.user.name %></td>
          <td><%= link_to 'Show', course, :class => "button btn btn-success btn-xs" %></td>
          <% if current_user == course.user%>
            <td><%= link_to 'Edit', edit_course_path(course), :class => "button btn btn-primary btn-xs" %></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button btn btn-danger btn-xs" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

